{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["ESNext"],
    "outDir": "./dist",
    "removeComments": true,
    "target": "ES6",
    "baseUrl": "./",
    
    "moduleResolution": "node",
    "sourceMap": true,
    
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,  // Permite que haya variables no utilizadas sin generar errores.
    "noUnusedParameters": false, // Permite par√°metros no utilizados sin generar errores.
    "noImplicitReturns": false ,// Omite los errores cuando no todas las funciones tienen un valor de retorno
    "noEmitOnError": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true
  },
  "include": ["api/**/*", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
